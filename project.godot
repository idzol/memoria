[rendering]

; Switched to 'mobile' (Vulkan). Forward Plus often causes silent 
; crashes on UI-heavy scenes due to driver-specific memory buffer issues.
; renderer/rendering_method="mobile"
; Switched to 'gl_compatibility'. 
; Vulkan/Mobile (Forward Mobile) is causing a Signal 11 crash on your RTX 5070.
; OpenGL 3.3 (Compatibility) is much more stable for 2D projects.
rendering_device/driver.windows="vulkan"
renderer/rendering_method="gl_compatibility"
renderer/rendering_method.mobile="gl_compatibility"
; Textures will look better when scaled on laptop screens
textures/canvas_textures/default_texture_filter=2

[xr]

; Explicitly disabled the startup check. This prevents Godot from 
; attempting to initialize VR runtimes (OpenXR) which causes the Signal 11 crash.
openxr/enabled=false
openxr/startup_check=false
shaders/enabled=false